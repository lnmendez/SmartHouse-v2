<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.luis.smarthouse.editar">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/edit_AppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/edit_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:theme="@style/Base.ThemeOverlay.AppCompat.Dark">

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ImageView
        android:id="@+id/edit_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/edit_AppBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/lightbulb" />

    <TextView
        android:id="@+id/edit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_img"
        android:layout_centerHorizontal="true"
        android:text="Nuevo Sensor de Luz"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:width="280dp"
        android:hint="Nombre" />

    <EditText
        android:id="@+id/edit_descrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:width="280dp"
        android:hint="Descripcion" />

    <Button
        android:id="@+id/edit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_descrip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:width="280dp"
        android:background="#00bfa5"
        android:onClick="editSave"
        android:text="GUARDAR"
        android:textColor="#ffffff" />
</RelativeLayout>